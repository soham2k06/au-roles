{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "utils/index.ts",
    "utils/dbConntect.js",
    "utils/dbConntect.js",
    "utils/constants/index.js",
    "components/index.js",
    "components/roles/useRoles.ts",
    "app/api/roles/route.ts",
    "app/api/roles/[name]/route.ts",
    "models/Admin.j",
    "utils/lib/auth.ts",
    "app/api/auth/[...nextauth]/route.ts",
    "utils/dbConnect.js"
  ],
  "exclude": ["node_modules"]
}
